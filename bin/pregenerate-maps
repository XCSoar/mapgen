	['US_ID_SOUTHWEST', -119.3, 41.5, -112.7, 45.5]]

def main():
    f = open('maps.config.js', 'w')
    f.write('var MAPS = [')
    for i, map in enumerate(maps):
        if i != 0:
            f.write(',')
        f.write("\n ['{}',{},{},{},{}]".format(*map))
    f.write("\n];\n")
    f.close()
    for map in maps:
        output_file = map[0] + '.xcm'
        left   = map[1]
        bottom = map[2]
        right  = map[3]
        top    = map[4]
        generator = Generator(dir_data=os.path.join(app_dir, 'data'),
                              dir_temp='/tmp/mapgen-{}'.format(os.getpid()))
        generator.set_bounds(GeoRect(left, right, top, bottom))
        generator.add_information_file(output_file)
        generator.add_topology()
        generator.add_terrain(9.0)
        generator.create(output_file)
        generator.cleanup()

if __name__ == '__main__':
    main()
